<ion-header>
  <ion-navbar ion-text color="light">
    <ion-buttons start>
      <button ion-button (click)="closeModal()">
        <ion-icon name="close"></ion-icon>
      </button>
    </ion-buttons>
    <ion-title>Product Specification</ion-title>
  </ion-navbar>
</ion-header>


<ion-content>
  <!--item thumbnail-->
  <ion-item class="no-border border-bottom">
    <ion-thumbnail item-left>
      <img src="{{ item?.img }}">
    </ion-thumbnail>
    <div>
      <h1 class="price" style='color:red;text-decoration:line-through'  ion-text color="danger" margin-top *ngIf="item?.web_sale==1">
        {{ item.retail_web_price | currency:'GBP':true}}
      </h1>
      <h1 class="price" ion-text color="dark" margin-top>{{ item?.webprice | currency:'GBP':true }}</h1>
    </div>
  </ion-item>
  <div class="border-bottom" padding>
    <div>Quantity</div>
    <div class="input-qty" margin-top>
      <span class="btn">
        <ion-icon name="ios-remove"></ion-icon>
      </span>
      <input type="text" value="qty">
      <span class="btn">
        <ion-icon name="ios-add"></ion-icon>
      </span>
      <div class="clear"></div>
    </div>
  </div>
  <!--add to cart-->
  <ion-grid>
    <ion-row>
      <ion-col>
        <button ion-button block class="btn-add-cart" (click)="addCart(item)">ADD TO CART</button>
      </ion-col>
    </ion-row>
  </ion-grid>

</ion-content>
