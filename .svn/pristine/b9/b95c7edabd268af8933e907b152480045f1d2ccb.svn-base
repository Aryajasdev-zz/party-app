<ion-header>
  <ion-navbar ion-text color="primary">
    <ion-buttons start>
      <button ion-button (click)="closeModal()">
        <ion-icon name="close"></ion-icon>
      </button>
    </ion-buttons>
    <ion-title>Filter for {{url}}</ion-title>
  </ion-navbar>
</ion-header>

<ion-content padding class="categories">
  <ion-list>     
    <ion-item>          
      <h2>{{catname}}</h2>
      <button ion-button clear item-right (click)="showMe(url,'')">Show All</button>
    </ion-item>
    <div *ngFor="let category of categories">
      <div *ngIf="category.isChildren">
        <ion-list-header (click)="toggleDetails(category)">{{category?.name}}
          <ion-icon ion-text color="primary" item-right [name]="category?.icon"></ion-icon>
        </ion-list-header>
        <div *ngIf="category?.isshown">
          <ion-item *ngFor="let scat of category?.subcats">          
            <h2>{{scat?.name}}</h2>
            <button ion-button clear item-right (click)="showMe(scat?.url, scat?.name)">Show Products</button>
          </ion-item>
        </div>
      </div>  
      <ion-item *ngIf="!category.isChildren">          
        <h2>{{category?.name}}</h2>
        <button ion-button clear item-right (click)="showMe(category?.url,category?.name)">Show Products</button>
      </ion-item>  
    </div>
  </ion-list>
</ion-content>
