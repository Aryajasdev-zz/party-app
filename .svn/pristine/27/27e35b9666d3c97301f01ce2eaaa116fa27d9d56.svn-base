<ion-header>
  <ion-navbar ion-text color="primary">
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>Cart</ion-title>
  </ion-navbar>
</ion-header>

<ion-content class="common-bg">
  <div class="card">
    <ion-list class="list-full-border" no-margin>
      <ion-item class="product" *ngFor="let itm of items; let i = index">
        <ion-thumbnail item-left>
          <img src="{{ itm?.img }}">
        </ion-thumbnail>
        <!--item's information-->
        <div>
          <div text-wrap>{{ itm?.name }}</div>
          <div class="text-sm">
            <span ion-text color="gray">{{ itm?.size }}</span><br/>
            <span ion-text color="gray">Price : {{ itm.shopprice | currency:'GBP':true }} @ Each</span>
          </div>
          <div padding-bottom>
            <span class="pull-right">{{ itm.shopprice * itm.qty | currency:'GBP':true }}</span>
            <div class="clear"></div>
          </div>
          <ion-grid no-padding>  
            <ion-row> 
              <ion-col width-20>
                <button ion-button color="dark" [disabled]="itm?.qty==1" (click)="update('-',itm)" icon-right>
                  <ion-icon name='remove-circle' is-active="false"></ion-icon>
                </button>
              </ion-col>
              <ion-col style="padding:10px" width-10>
                <span>{{itm?.qty}}</span>
              </ion-col>
              <ion-col width-20>
                <button ion-button color="dark" (click)="update('+',itm)" icon-left>
                  <ion-icon name='add-circle' is-active="false"></ion-icon>
                </button>  
              </ion-col>   
              <ion-col width-50>
                <button ion-button color="danger" (click)="remove(itm)" icon-left>
                 <ion-icon ios="ios-trash" md="md-trash"></ion-icon> 
                </button>                               
              </ion-col>                          
            </ion-row>        
          </ion-grid>          
        </div>      
      </ion-item>   
    </ion-list>
  </div>      
  <div class="card" padding>
    <div>
      <span class="pull-left" ion-text color="gray">Subtotal</span>
      <span class="pull-right" ion-text color="gray">{{ subtotal | currency:'GBP':true }}</span>
      <div class="clear"></div>
    </div>
    <div>
      <span class="pull-left" ion-text color="gray">Postage & Delivery</span>
      <span class="pull-right" ion-text color="gray">{{ postage | currency:'GBP':true }}</span>
      <div class="clear"></div>
    </div>
    <div>
      <span class="pull-left" ion-text color="gray">Total</span>
      <span class="pull-right bold" ion-text color="danger">{{ total | currency:'GBP':true }}</span>
      <div class="clear"></div>
    </div>
  </div> 
</ion-content>
<ion-footer class="cart-footer">   
  <button ion-button color="dark" (click)="Changedelivery()">
    Change Delivery
  </button>    
  <button ion-button color="dark" (click)="Checkout()">
    <ion-icon ios="ios-cart" md="md-cart"></ion-icon> 
    &nbsp;Checkout&nbsp;
    <ion-icon ios="ios-arrow-round-forward" md="md-arrow-round-forward"></ion-icon>
  </button>
</ion-footer>
