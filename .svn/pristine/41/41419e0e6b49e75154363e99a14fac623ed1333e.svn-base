<ion-header>
  <ion-navbar ion-text color="primary">
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>Checkout</ion-title>
  </ion-navbar>
</ion-header>
<ion-content class="common-bg cart"> 
<div class="card">    
    <ion-grid>
         <ion-row>
            <ion-col width-50>OrderID</ion-col>
            <ion-col width-50>{{orderid}}</ion-col>
        </ion-row>
        <ion-row>
            <ion-col width-50>Postage</ion-col>
            <ion-col width-50>{{postage | currency:'GBP':true}}</ion-col>
        </ion-row>
        <ion-row>
            <ion-col width-50>Total</ion-col>
            <ion-col width-50>{{total | currency:'GBP':true}}</ion-col>
        </ion-row>
    </ion-grid>
</div>
<div class="card">
    <button ion-button color="dark" (click)="payPal()">
        <ion-icon ios="ios-cart" md="md-cart"></ion-icon>&nbsp;Pay with Paypal
        <ion-icon ios="ios-arrow-round-forward" md="md-arrow-round-forward"></ion-icon>
    </button>
    <button ion-button type="submit" (click)="payCard()" ion-text id="payButtonId">
        <ion-icon ios="ios-cart" md="md-cart"></ion-icon>&nbsp;Pay By Card
        <ion-icon ios="ios-arrow-round-forward" md="md-arrow-round-forward"></ion-icon>
    </button>
</div>    
