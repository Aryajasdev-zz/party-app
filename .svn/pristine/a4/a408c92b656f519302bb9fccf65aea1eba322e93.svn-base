<ion-header>
  <ion-navbar ion-text color="primary">
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>Home</ion-title>
    <ion-buttons end>
      <button ion-button (click)="goToSearch()">
        <ion-icon name="search"></ion-icon>
      </button>
      <button ion-button (click)="goToCart()">
        <ion-icon name="cart"></ion-icon>
      </button>
    </ion-buttons>
  </ion-navbar>
</ion-header>
<ion-content class="common-bg">
  <!-- slider on top-->
  <ion-slides pager autoplay="2000">
    <ion-slide *ngFor="let slide of slides">
      <img src="{{ slide.src }}" alt="">
    </ion-slide>
  </ion-slides>
  <!--list categories-->
  <ion-card *ngFor="let cat of categories">
      <div (click)="toggleDetails(cat)">
        <img src="{{cat?.imgname}}"/>
        <div class="card-title">
          {{cat?.name}}
          <ion-icon ion-text color="primary" item-right [name]="category?.icon"></ion-icon>
        </div>
      </div>
      <ion-grid *ngIf="cat?.isshown">
        <ion-row wrap>
          <ion-col *ngFor="let scat of cat?.subcats" width-33>
            <ion-thumbnail item-left (click)="showMe(scat.url,scat.name)">
              <img src="{{ scat?.catimg }}">
            </ion-thumbnail>
          </ion-col>
        </ion-row>
      </ion-grid>
  </ion-card>

</ion-content>
